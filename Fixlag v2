---------------- TOGGLE CREATOR ----------------
local function createToggle(parent, icon, titleText, description, initialState, callback)
    local box = Instance.new("Frame", parent)
    box.Size = UDim2.new(1, 0, 0, 70)
    box.BackgroundColor3 = CONFIG.LightColor
    box.ZIndex = 55
    
    local boxCorner = Instance.new("UICorner", box)
    boxCorner.CornerRadius = UDim.new(0, 10)
    
    -- Icon
    local iconLabel = Instance.new("TextLabel", box)
    iconLabel.Size = UDim2.new(0, 40, 0, 40)
    iconLabel.Position = UDim2.new(0, 10, 0.5, -20)
    iconLabel.BackgroundTransparency = 1
    iconLabel.Text = icon
    iconLabel.TextColor3 = CONFIG.ThemeColor
    iconLabel.Font = Enum.Font.GothamBold
    iconLabel.TextSize = 22
    iconLabel.ZIndex = 56
    
    -- Title
    local titleLabel = Instance.new("TextLabel", box)
    titleLabel.Size = UDim2.new(0.7, -60, 0, 25)
    titleLabel.Position = UDim2.new(0, 60, 0, 10)
    titleLabel.BackgroundTransparency = 1
    titleLabel.Text = titleText
    titleLabel.TextColor3 = CONFIG.TextColor
    titleLabel.Font = CONFIG.Font
    titleLabel.TextSize = 14
    titleLabel.TextXAlignment = Enum.TextXAlignment.Left
    titleLabel.ZIndex = 56
    
    -- Description
    local descLabel = Instance.new("TextLabel", box)
    descLabel.Size = UDim2.new(0.7, -60, 0, 35)
    descLabel.Position = UDim2.new(0, 60, 0, 30)
    descLabel.BackgroundTransparency = 1
    descLabel.Text = description
    descLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
    descLabel.Font = Enum.Font.Gotham
    descLabel.TextSize = 11
    descLabel.TextWrapped = true
    descLabel.TextXAlignment = Enum.TextXAlignment.Left
    descLabel.ZIndex = 56
    
    -- Toggle Button
    local btn = Instance.new("TextButton", box)
    btn.Size = UDim2.new(0, 60, 0, 28)
    btn.Position = UDim2.new(1, -70, 0.5, -14)
    btn.Text = initialState and "ON" or "OFF"
    btn.BackgroundColor3 = initialState and Color3.fromRGB(100, 255, 100) or Color3.fromRGB(180, 100, 240)
    btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 12
    btn.ZIndex = 56
    btn.AutoButtonColor = false
    
    local btnCorner = Instance.new("UICorner", btn)
    btnCorner.CornerRadius = UDim.new(0, 8)
    
    -- Status Light
    local statusLight = Instance.new("Frame", btn)
    statusLight.Size = UDim2.new(0, 8, 0, 8)
    statusLight.Position = UDim2.new(0, 5, 0.5, -4)
    statusLight.BackgroundColor3 = initialState and Color3.fromRGB(50, 255, 50) or Color3.fromRGB(255, 50, 50)
    statusLight.ZIndex = 57
    
    local statusCorner = Instance.new("UICorner", statusLight)
    statusCorner.CornerRadius = UDim.new(1, 0)
    
    -- Hover Effects
    box.MouseEnter:Connect(function()
        tweenProperty(box, "BackgroundColor3", Color3.fromRGB(100, 60, 150), 0.2)
    end)
    
    box.MouseLeave:Connect(function()
        tweenProperty(box, "BackgroundColor3", CONFIG.LightColor, 0.2)
    end)
    
    btn.MouseEnter:Connect(function()
        if btn.Text == "ON" then
            tweenProperty(btn, "BackgroundColor3", Color3.fromRGB(120, 255, 120), 0.2)
        else
            tweenProperty(btn, "BackgroundColor3", Color3.fromRGB(200, 120, 255), 0.2)
        end
    end)
    
    btn.MouseLeave:Connect(function()
        if btn.Text == "ON" then
            tweenProperty(btn, "BackgroundColor3", Color3.fromRGB(100, 255, 100), 0.2)
        else
            tweenProperty(btn, "BackgroundColor3", Color3.fromRGB(180, 100, 240), 0.2)
        end
    end)
    
    local state = initialState
    
    local function updateToggle()
        if state then
            btn.Text = "ON"
            tweenProperty(btn, "BackgroundColor3", Color3.fromRGB(100, 255, 100), 0.3)
            tweenProperty(statusLight, "BackgroundColor3", Color3.fromRGB(50, 255, 50), 0.3)
        else
            btn.Text = "OFF"
            tweenProperty(btn, "BackgroundColor3", Color3.fromRGB(180, 100, 240), 0.3)
            tweenProperty(statusLight, "BackgroundColor3", Color3.fromRGB(255, 50, 50), 0.3)
        end
        
        if callback then
            callback(state)
        end
    end
    
    btn.MouseButton1Click:Connect(function()
        state = not state
        updateToggle()
    end)
    
    -- Initialize
    updateToggle()
    
    return {
        Box = box,
        SetState = function(newState)
            state = newState
            updateToggle()
        end,
        GetState = function()
            return state
        end
    }
end

---------------- SLIDER CREATOR ----------------
local function createSlider(parent, labelText, minValue, maxValue, currentValue, callback)
    local sliderContainer = Instance.new("Frame", parent)
    sliderContainer.Name = labelText .. "Slider"
    sliderContainer.Size = UDim2.new(1, 0, 0, 70)
    sliderContainer.BackgroundTransparency = 1
    sliderContainer.ZIndex = 55
    
    -- Label
    local label = Instance.new("TextLabel", sliderContainer)
    label.Size = UDim2.new(1, -20, 0, 25)
    label.Position = UDim2.new(0, 10, 0, 0)
    label.BackgroundTransparency = 1
    label.Text = labelText
    label.TextColor3 = CONFIG.TextColor
    label.Font = CONFIG.Font
    label.TextSize = 14
    label.TextXAlignment = Enum.TextXAlignment.Left
    label.ZIndex = 56
    
    -- Value Display
    local valueLabel = Instance.new("TextLabel", sliderContainer)
    valueLabel.Size = UDim2.new(0, 50, 0, 25)
    valueLabel.Position = UDim2.new(1, -60, 0, 0)
    valueLabel.BackgroundTransparency = 1
    valueLabel.Text = tostring(currentValue)
    valueLabel.TextColor3 = CONFIG.ThemeColor
    valueLabel.Font = CONFIG.Font
    valueLabel.TextSize = 14
    valueLabel.TextXAlignment = Enum.TextXAlignment.Right
    valueLabel.ZIndex = 56
    
    -- Slider Track
    local track = Instance.new("Frame", sliderContainer)
    track.Name = "Track"
    track.Size = UDim2.new(1, -20, 0, 6)
    track.Position = UDim2.new(0, 10, 0, 35)
    track.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    track.BorderSizePixel = 0
    track.ZIndex = 56
    
    local trackCorner = Instance.new("UICorner", track)
    trackCorner.CornerRadius = UDim.new(1, 0)
    
    -- Slider Fill
    local fill = Instance.new("Frame", track)
    fill.Name = "Fill"
    fill.Size = UDim2.new((currentValue - minValue) / (maxValue - minValue), 0, 1, 0)
    fill.BackgroundColor3 = CONFIG.ThemeColor
    fill.BorderSizePixel = 0
    fill.ZIndex = 57
    
    local fillCorner = Instance.new("UICorner", fill)
    fillCorner.CornerRadius = UDim.new(1, 0)
    
    -- Slider Thumb
    local thumb = Instance.new("Frame", track)
    thumb.Name = "Thumb"
    thumb.Size = UDim2.new(0, 16, 0, 16)
    thumb.Position = UDim2.new((currentValue - minValue) / (maxValue - minValue), -8, 0.5, -8)
    thumb.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    thumb.BorderSizePixel = 0
    thumb.ZIndex = 58
    
    local thumbCorner = Instance.new("UICorner", thumb)
    thumbCorner.CornerRadius = UDim.new(1, 0)
    
    -- Dragging Logic
    local dragging = false
    
    local function updateSlider(input)
        local relativeX = (input.Position.X - track.AbsolutePosition.X) / track.AbsoluteSize.X
        relativeX = math.clamp(relativeX, 0, 1)
        
        local value = minValue + (maxValue - minValue) * relativeX
        value = math.floor(value * 10) / 10
        
        fill.Size = UDim2.new(relativeX, 0, 1, 0)
        thumb.Position = UDim2.new(relativeX, -8, 0.5, -8)
        valueLabel.Text = tostring(value)
        
        if callback then
            callback(value)
        end
    end
    
    track.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            updateSlider(input)
        end
    end)
    
    track.InputChanged:Connect(function(input)
        if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
            updateSlider(input)
        end
    end)
    
    UIS.InputEnded:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = false
        end
    end)
    
    return sliderContainer
end

---------------- SECTION CREATOR ----------------
local function createSection(parent, text)
    local section = Instance.new("TextLabel", parent)
    section.Text = "‚ñ¨‚ñ¨‚ñ¨ " .. text .. " ‚ñ¨‚ñ¨‚ñ¨"
    section.Size = UDim2.new(1, 0, 0, 30)
    section.BackgroundTransparency = 1
    section.TextColor3 = CONFIG.ThemeColor
    section.Font = CONFIG.TitleFont
    section.TextSize = 14
    section.ZIndex = 55
    
    return section
end

