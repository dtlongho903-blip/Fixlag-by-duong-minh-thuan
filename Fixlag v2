    STATE.HITBOX_ENABLED = v
    if v then
        setupHitboxConnections()
        updateAllHitboxes()
    else
        for _, hitbox in pairs(hitboxParts) do
            if hitbox and hitbox.Parent then
                hitbox:Destroy()
            end
        end
        hitboxParts = {}
